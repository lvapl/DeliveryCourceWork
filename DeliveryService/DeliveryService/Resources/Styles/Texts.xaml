<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SelectionTitle"
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBlackColorBrush}"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="EditField"
           TargetType="TextBlock">
        <Setter Property="Margin" Value="11 0 0 1"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextGrayColorBrush}"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>
</ResourceDictionary>